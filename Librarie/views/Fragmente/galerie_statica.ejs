<section id="galerie_statica">
    <h2>Galerie</h2>
    <div id="grid-galerie">
        <% 
            for (let imag of locals.imagini){
                %>
                <figure> 
                    <picture>
                        <source srcset="/<%- imag.mic %>" media="(max-width: 650px)" />
                        <source srcset="/<%- imag.mediu %>" media="(max-width: 850px)" />
                        <img src="/<%- imag.mare %>" alt="<%- imag.alt || imag.titlu%>" />
                    </picture>
                    <figcaption><%- imag.descriere %></figcaption>
                </figure>
        <% } %> 
    </div>
</section>